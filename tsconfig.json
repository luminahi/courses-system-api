{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES6",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "build",
        "rootDir": "./src",
        "moduleResolution": "Node"
    },
    "include": ["src/**/*.ts"]
}
